{
  "name": "@nest-react-monorepo/client",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "client/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "client/dist"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@nest-react-monorepo/client:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@nest-react-monorepo/client:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "@nest-react-monorepo/client:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "@nest-react-monorepo/client:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "@nest-react-monorepo/client:build:development"
        },
        "production": {
          "buildTarget": "@nest-react-monorepo/client:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "client/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["client/**/*.{ts,tsx,js,jsx}"]
      }
    }
  }
}
